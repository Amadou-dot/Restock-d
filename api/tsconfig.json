{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext", // Ensure it compiles to ES Modules
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["./*.ts"],
  "exclude": ["node_modules"]
}
